<!DOCTYPE html>
<html>
<head>
  <title>Object and Array Operations</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 30px;
    }
    h2 {
      color: #222;
    }
    label {
      font-weight: bold;
    }
    input, button {
      margin-top: 5px;
      margin-bottom: 10px;
    }
    #result {
      margin-top: 10px;
      font-size: 18px;
    }
  </style>
</head>
<body>
  <h2>Object & Array Operations</h2>  
  <p><b>Initial Array:</b> <span id="array"></span></p> 

  <!-- Add Object -->
  <label for="key">Enter Key:</label>
  <input type="text" id="key">  
  <label for="value">Enter Value:</label>
  <input type="text" id="value"> 
  <button onclick="appendObject()">Append Object</button>
  <br><br>  

  <!-- Check if Array -->
  <label for="variable">Enter variable (type 'arr' or 'obj'):</label>
  <input type="text" id="variable">
  <button onclick="checkIfArray()">Check</button>  

  <h3>Result:</h3>
  <div id="result"></div>  

  <script>
    // Initial data
    let arr = [{ name: "Alice" }, { name: "Bob" }];
    let obj = { age: 25, city: "Delhi" };   

    // Show initial array
    document.getElementById("array").innerText = JSON.stringify(arr);    

    // Function to display result messages
    function showResult(message) {
      let resultDiv = document.getElementById("result");
      resultDiv.innerHTML = `<p>${message}</p>`;
    }

    // Append new object to array
    function appendObject() {
      let key = document.getElementById("key").value.trim();
      let value = document.getElementById("value").value.trim();      

      if (key === "" || value === "") {
        showResult(" Please enter both key and value.");
        return;
      }      

      let newObj = {};
      newObj[key] = value;
      arr.push(newObj); // append object

      document.getElementById("array").innerText = JSON.stringify(arr);
      showResult(` Appended object: ${JSON.stringify(newObj)}`);

      // Clear inputs
      document.getElementById("key").value = "";
      document.getElementById("value").value = "";
    }    

    // Check if variable is array or object
    function checkIfArray() {
      let variableName = document.getElementById("variable").value.trim();
      let variable;      

      if (variableName === "arr") {
        variable = arr;
      } else if (variableName === "obj") {
        variable = obj;
      } else {
        showResult(" Please type 'arr' or 'obj'.");
        return;
      }      

      let isArray = Array.isArray(variable);
      showResult(`Is "${variableName}" an array? â†’ ${isArray}`);

      // Clear input
      document.getElementById("variable").value = "";
    }
  </script>
</body>
</html>


