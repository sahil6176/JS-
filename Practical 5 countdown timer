<!DOCTYPE html>
<html>
<head>
  <title>Countdown Timer</title>
</head>
<body>
  <h2>Countdown Timer</h2>  
  <label for="seconds">Enter seconds:</label>
  <input type="number" id="seconds" min="1" placeholder="e.g. 60" />
  <button onclick="startTimer()">Start</button>  
  <h3 id="timer" style="font-size: 2em; color: #333;">00:00</h3> 
  <script>
    let countdown; 
    
    // Function to make the timer text visibly 'flash' without CSS classes
    function flashTimer(element, times, color) {
      let count = 0;
      let originalColor = element.style.color;
      let interval = setInterval(() => {
        if (count >= times * 2) { // Stop after 'times' flashes (on/off cycles)
          clearInterval(interval);
          element.style.color = originalColor; // Reset to original color
          return;
        }
        
        // Toggle the color
        element.style.color = (count % 2 === 0) ? color : originalColor;
        count++;
      }, 500); // Flash every half-second
    }

    function startTimer() {
      let timerDisplay = document.getElementById("timer");
      
      // 1. *Clear previous interval and reset inline styles*
      clearInterval(countdown);
      if (timerDisplay) {
        timerDisplay.style.color = '#333'; // Reset color
      }
      
      let timeLeft = parseInt(document.getElementById("seconds").value);

      if (isNaN(timeLeft) || timeLeft <= 0) {
        timerDisplay.innerHTML = "Please enter a valid time!";
        return;
      }      

      // Initial display
      let initialMinutes = Math.floor(timeLeft / 60);
      let initialSeconds = timeLeft % 60;
      timerDisplay.innerHTML = 
          (initialMinutes < 10 ? "0" : "") + initialMinutes + ":" + 
          (initialSeconds < 10 ? "0" : "") + initialSeconds;

      countdown = setInterval(() => {
        timeLeft--; 
        
        if (timeLeft < 0) {
          clearInterval(countdown);
          timerDisplay.innerHTML = "*Time's up!*";
          
          // 2. *Apply inline style for "blinking" effect* (simulated)
          if (timerDisplay) {
             timerDisplay.style.color = 'red';
             flashTimer(timerDisplay, 6, 'red'); // Flash 6 times
          }
          return;
        }

        let minutes = Math.floor(timeLeft / 60);
        let seconds = timeLeft % 60;        
        timerDisplay.innerHTML = 
          (minutes < 10 ? "0" : "") + minutes + ":" + 
          (seconds < 10 ? "0" : "") + seconds;
      }, 1000);
    }
  </script>
</body>
</html>
